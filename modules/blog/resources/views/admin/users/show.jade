extends ../../layout

block content

  - if (null !== user)

    h2.page-headline User details
      .pull-right
        include _operations

    table.table.table-bordered.table-striped
      tbody

        tr
          th.min Fullname
          td #{ user.fullname }

        tr
          th.min Email
          td #{ user.email }

        tr
          th.min Created at
          td #{helper.date.format(user.created_at, 'LLLL')}

        tr(class="#{ user.deleted_at ? 'danger' : 'success' }")
          th.min Deleted
          td #{ user.deleted_at ? ('at ' + helper.date.format(user.deleted_at, 'LLLL')) : 'No' }

  - else

    - var entity = 'User'
    include ../../error/notfound

