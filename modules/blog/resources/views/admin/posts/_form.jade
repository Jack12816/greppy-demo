form.form-horizontal(role="form", method="POST", action="#{response.path}")

  .form-group
    label.col-lg-2.control-label Title
    .col-lg-10
      input.form-control(
        type="text",
        name="post_title",
        placeholder="Just type the title ..",
        required="required",
        value="#{('undefined' !== typeof post && null !== post) ? post.title : ''}")

      span.help-block.
        Choose a expressive title.

  .form-group
    label.col-lg-2.control-label Content
    .col-lg-10
      textarea.form-control(
        name="post_content"
        placeholder="Just type the content ..",
        required="required",
        rows="10"
      ) #{('undefined' !== typeof post && null !== post) ? post.content : ''}

      span.help-block.
        Allowed formats: HTML and Markdown

  .form-group
    .col-lg-offset-2.col-lg-10
      button.btn.btn-primary
        i.fa.fa-check
        |&nbsp;
        | #{response.action === 'create' ? 'Create' : 'Save'}

