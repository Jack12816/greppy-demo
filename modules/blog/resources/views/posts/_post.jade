.post.panel.panel-info
  .panel-heading.clearfix
    h4.pull-left
      a(href="/posts/" + post.slug)= post.title
    p.pull-right
      | #{helper.date.format(post.created_at, 'MMMM Do, h:mm a')} by&nbsp;
      a(href="/users/" + post.author_id) #{post.author.fullname}
  - if (false == single)
    .panel-body= (post.content).words(50)
  - else if ('undefined' != typeof post.comments)
    .panel-body= post.content
    include _comment-list
  - else
    .panel-body= post.content