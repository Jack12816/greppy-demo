a#fork-on-github(href="https://github.com/Jack12816/greppy", target="_blank")
  img(
    style="position: fixed; top: 0; left: 0; border: 0; z-index: 9999;",
    src="https://s3.amazonaws.com/github/ribbons/forkme_left_darkblue_121621.png"
    alt="Fork me on GitHub")

.navbar.navbar-inverse.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-collapse")
        span.icon-bar
        span.icon-bar
        span.icon-bar
    .navbar-collapse.collapse
      ul.nav.navbar-nav
        li
          a(href="#{app.linkContext('home', '/')}#greppy") Greppy
        li
          a(href="#{app.linkContext('home', '/')}#greppy-frontend") Greppy Frontend
        li
          a(href="#{app.linkContext('home', '/')}#greppy-gang") Gang
        li
          a(href="#{app.linkContext('home', '/')}#greppy-contributors") Contributors
        li
          a(href="#{app.linkContext('docs')}") Documentation
        li.active
          a(href="/") Blog
        li
          a(href="#{app.linkContext('home', '/resources')}") Resources

      form.navbar-form.navbar-right(role="search", method="GET", action="/posts/search")
        .form-group
          .input-group
            input.form-control(
              type="text",
              name="q",
              placeholder="Search for posts ...",
              value="#{'undefined' === typeof searchQuery ? '' : searchQuery}")
            span.input-group-btn
              button.btn.btn-primary(type="submit")
                i.fa.fa-search

